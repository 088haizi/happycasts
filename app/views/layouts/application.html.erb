<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "HappyCasts" %></title>
  <link href="/assets/play.png" rel="icon" type="image/x-png" />
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-34710471-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</head>
<body>	
<div id="wrapper">
<div class="navbar">
    <div class="navbar-inner">
        <div class="container">
            <h3><a class="brand" href="/">Happycasts</a></h3>
            <ul class="nav">

            </ul>
            <ul class="nav pull-right">
                  <% if current_user %>  
                    <% @user= User.find(current_user.id) %>
                    <li><%= link_to current_user.name, user_path(@user) %></li> 
                    <li><%= link_to  t("logout"), logout_path %></li>
                  <% else %>  
                    <li><%= link_to t("login"), login_path %></li>
                  <% end %>  
            </ul>
        </div>
    </div>
</div>
<div id="container">
      <%= yield %>
 <div id="footer-push"></div><!-- hack for sticky footer -->
</div>
</div>
<div class="footer">
  <div class="container">
    <ul class="footer_nav">
      <h4>Happycasts</h4>
      <li><a href="/about">About</a></li>
      <li><a href="/users">Users</a></li>
    </ul>
    <ul class="footer_nav">
           <h4>Interesting Sites</h4>
      <li><a href="http://www.catonmat.net/">Catonmat</a></li>
      <li><a href="http://www.linfo.org/">Linfo</a></li>
      <li><a href="http://www.github.com/">Github</a></li>
    </ul>
  </div>
</div>
<%= javascript_include_tag "application"%>
<%= yield :scripts %>
</body>
</html>
