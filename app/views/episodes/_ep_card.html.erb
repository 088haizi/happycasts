<%= link_to episode do %>
<div class="ep_card">
  <div class="screenshot">
    <%= image_tag("http://7u2jok.com1.z0.glb.clouddn.com/#{episode.asset_name}.png") %>
  </div>
  <h2 class="name">
    <%= episode.name %>
    <% if episode.revision.present? %>
      <span class="label"><%= episode.revision %></span>
    <% end %>
  </h2>
  <div class="metadata">
    第<%= episode.id %>期
    <span class="date"> | <%= render_episode_publish_time(episode).chop %> </span>
  </div>
</div>
<% end %>
