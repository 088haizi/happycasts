<div class="episode">
  <div class="episode_head">
      <span class="number">Episode #<%= episode.position %></span> &ndash;
      <span class="published_at"><%= episode.published_at.strftime('%b %d, %Y') %></span>
      <span class="stats">(<%= pluralize (episode.seconds/60).round, "minute" %>, <%= link_to pluralize(episode.comments.size, "comment"), episode_path(episode, :view => "comments") %>)</span>
    <h2><%= link_to episode.name, episode %></h2>
  </div>
  <div class="episode_body">
    <div class="episode_body_right">
      <%= link_to image_tag("http://media.happycasts.net/assets/episodes/stills/#{episode.asset_name}.png", :alt => episode.name), episode %>
    </div>
    <%= episode.description %>
  </div>
</div>
