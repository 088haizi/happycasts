<div class="episode">
  <div class="screenshot"><%= link_to image_tag("/assets/episodes/stills/#{}.png", :size => "200x125", :alt => episode.name), episode %></div>
  <div class="main">
    <h2><%= link_to episode.name, episode %></h2>
    <div class="watch">
      <%= link_to "Watch Episode", episode_path(episode, :autoplay => true), :class => "watch_button" %>
    </div>
  </div>
  <div class="clear"></div>
</div>
