<div class="content">
  <%= simple_form_for @episode do |f| %>
      <%= f.input :published_at,
          :required => false,
          :default => @default_time,
          :discard_hour => true
      %>
      <%= f.input :name %>
      <%= f.input :revision %>
      <%= f.input :tag_names %>

      <%= f.input :description %>
      <%= f.input :notes %>
      <%= f.button :submit, :class => "button" %>
  <% end %>
</div>
