<% title "#{@user.name}'s Profile" %>

<div id="user_show">
<div class="row-fluid profile">
  <div class="span9 main_info">
    <div id="user_name">
      <%= @user.name %>
    </div>
    <div id="user_email">
      <%= @user.email %>
    </div>
  </div>

  <div class="span3 edit_profile_btn">
    <div id="admin_zone">
      <% if can? :edit, :users %>  
        <%= link_to "Edit Your Profile", edit_user_path, :class => "btn" %>
      <% end %>
      <% if can? :create, :episodes %>
        <div class="actions"><%= link_to t('new_ep'), new_episode_path, :class => "btn" %></div>
      <% end %>
    </div>
  </div>
</div>

  <h2 class="comments">Comments:</h2>
  <%= render @user.comments.reverse %>
</div><!-- user_show -->

